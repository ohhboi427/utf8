{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "bin",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "lib",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "lib"
      }
    },
    {
      "name": "ci-config",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Development",
      "configurePreset": "base",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Release",
      "configurePreset": "base",
      "configuration": "Release"
    },
    {
      "name": "ci-build",
      "configurePreset": "ci-config"
    }
  ],
  "testPresets": [
    {
      "name": "test-dev",
      "displayName": "Test",
      "configurePreset": "base",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "ci-test",
      "configurePreset": "ci-config",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "ci",
      "displayName": "CI Workflow",
      "steps": [
        {
          "type": "configure",
          "name": "ci-config"
        },
        {
          "type": "build",
          "name": "ci-build"
        },
        {
          "type": "test",
          "name": "ci-test"
        }
      ]
    }
  ]
}
